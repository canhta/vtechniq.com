---
import { Card } from '@eliancodes/brutal-ui';
import { Image } from 'astro:assets';

interface Props {
  icon?: string;
  title: string;
  imgSrc: ImageMetadata;
  imgAlt: string;
  description: string;
}

const { title, icon, imgAlt, imgSrc, description } = Astro.props;
---

<Card color='white'>
  <div class='flex items-center gap-2'>
    {icon && <div class:list={[icon, 'p-3']} />}
    <h3 class='open-sans text-lg md:text-xl'>{title}</h3>
  </div>
  <div class='rounded-lg border-3 border-black my-4 h-56'>
    <Image
      src={imgSrc}
      alt={imgAlt}
      width={800}
      height={400}
      class='rounded h-full w-full object-cover'
    />
  </div>
  <p class='open-sans'>{description}</p>
  <slot />
</Card>
